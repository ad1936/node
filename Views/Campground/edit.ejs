<%include ../partials/header%> 
    <div class="container ">
        <h1 class="text-center">Create a New Campground</h1>
        <div style="width:30%;margin:50px auto;">    
            <form  action="/campgrounds/<%=campground._id%>/?_method=put" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="editcamp[name]" value="<%=campground.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editcamp[image]" value="<%=campground.image%>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editcamp[description]" value="<%=campground.description%>" >
                </div>
                <div class="form-group">    
                    <button class="btn btn-primary btn-block" >SUBMIT</button>
                </div>
                
            </form> 
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>    
<%include ../partials/footer%>